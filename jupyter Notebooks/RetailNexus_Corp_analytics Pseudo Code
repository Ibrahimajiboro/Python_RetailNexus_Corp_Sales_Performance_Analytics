CLASS DataLoader:
    ATTRIBUTE: filepath (string, optional)

    METHOD __init__(filepath):
        STORE filepath

    METHOD load_csv(file_path):
        READ CSV file from file_path into DataFrame
        RETURN DataFrame

    METHOD load_excel(file_path, sheet_name=None):
        READ Excel file from file_path (with optional sheet_name) into DataFrame
        RETURN DataFrame

CLASS DataFamiliarization:
    PURPOSE: Provide tools to understand and explore datasets

    STATIC METHOD general_information(dataset):
        DISPLAY dataset info (column types, memory usage, non-null counts)
        RETURN info

   STATIC METHOD summary_statistics(dataset):
        CALCULATE statistical summary (mean, std, min, max, quartiles) for numeric columns
        RETURN summary

   STATIC METHOD check_missing_values(dataset):
        COUNT null/missing values for each column
        RETURN counts

   STATIC METHOD check_duplicated_rows(dataset):
        COUNT fully duplicated rows in dataset
        RETURN count
   
   STATIC METHOD show_valueCounts(dataset, column):
        IF column exists in dataset:
            CALCULATE frequency of each unique value in the column (including nulls)
            RETURN frequencies
        ELSE:
            PRINT error message
            RETURN None

    STATIC METHOD show_chart(dataset, column, chart_type):
        IF column exists in dataset:
            PLOT chart of column using specified chart type (bar, line, etc.)
            SET title, label axes, adjust layout
            SHOW chart
        ELSE:
            PRINT error message


CLASS DataCleaner:
    PURPOSE: Handle missing and duplicate data in datasets
